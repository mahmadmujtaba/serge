{
  "exclude": ["node_modules", "dist", "build", "lib", "__tests__", "**/*.test*", "**/*.scss.d.ts"],
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": false,
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "jsx": "react",
    "downlevelIteration": true,
    "strict": true,
    "removeComments": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@serge/*": ["../"]
    },
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./build"
  },
  "files": [
    "./typings.d.ts"
  ],
  "include": [
    "./src"
  ]
}
