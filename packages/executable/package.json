{
  "name": "@serge/executable",
  "version": "0.3.0",
  "author": "IanMayo <ian@planetmayo.com>",
  "description": "Build Serge as executable",
  "main": "index.js",
  "license": "Apache-2.0",
  "dependencies": {
    "find": "^0.3.0",
    "pkg": "^4.4.0"
  },
  "bin": "../server/bin.js",
  "pkg": {
    "assets": [
      "../client/build/**/*",
      "../server/default_img/**/*"
    ],
    "scripts": [
      "../server/addons/**/*"
    ]
  },
  "scripts": {
    "start": "node helpers/pkgResolveErrors.js && pkg . --out-path ./builds && node helpers/pkgCopyNodes.js",
    "pkg-build": "pkg . --out-path ./builds"
  }
}
